<!DOCTYPE html>
<html>
<body>

<p id="moveX"></p> //displays new positions of x
<p id="moveY"></p> //displays new positions of y
<p id="resultX"></p> //displayed if Player 1 wins
<p id="resultY"></p> //displayed if Player 2 wins

<script>
//combined form of two previous versions

/* 
   x is location of Player 1
   y is location of Player 2
*/

var x = 1; //x starts at position 1
var y = 21; //x starts at position 21

while ((y - x) > 1) { //the while loop is in place to repeat the code block, while the if loops check to see if and how each player can move before their turns
   
   if ((y - x ) > 3) { //the first loop will allow the player to move 1, 2, or 3 spaces if they are 4 or more spaces ways from their opponent. If 1, 2, or 3 are not selected, it will request again
      var movementX = prompt("Player 1, make your move.", "<enter 1, 2, or 3>");

      if (movementX == 1) {
         x = x + 1;
      }
      else if (movementX == 2){
         x = x + 2;
      }
      else if (movementX == 3){
         x = x + 3; 
      }
      else if (movementX != 1 || movementX != 2 || movementX != 3){
         var movementX = prompt("Player 1, make your move.", "<enter 1, 2, or 3>"); 
      }
      document.getElementById("moveX").innerHTML = x;
   }
   
   else if ((y - x) > 2) { //this loop only allows the player to move 1 or 2 spaces
      var movementX = prompt("Player 1, make your move.", "<enter 1 or 2>");

      if (movementX == 1) {
         x = x + 1;
      }
      else if (movementX == 2){
         x = x + 2;
      }
      else if (movementX != 1 || movementX != 2) {
         var movementX = prompt("Player 1, make your move.", "<enter 1 or 2>"); 
      }
      document.getElementById("moveX").innerHTML = x;
   }
   
   else if ((y - x) > 1) { //this loop forces the player to move 1 space
      var movementX = prompt("Player 1, make your move.", "<enter 1>");

      if (movementX == 1) {
         x = x + 1;
      }
      else if (movementX != 1) {
         var movementX = prompt("Player 1, make your move.", "<enter 1>"); 
      }
      document.getElementById("moveX").innerHTML = x;
   }


   if ((y - x ) > 3) {   
      var movementY = prompt("Player 2, make your move.", "<enter 1, 2, or 3>");

      if (movementY == 1) {
         y = y - 1;
      }
      else if (movementY == 2){
         y = y - 2;
      }
      else if (movementY == 3){
         y = y - 3; 
      }
      else if (movementY != 1 || movementX != 2 || movementX != 3){
         var movementY = prompt("Player 1, make your move.", "<enter 1, 2, or 3>"); 
      }
      document.getElementById("moveY").innerHTML = y;
   }

   else if ((y - x ) > 2) {   
      var movementY = prompt("Player 2, make your move.", "<enter 1 or 2>");

      if (movementY == 1) {
         y = y - 1;
      }
      else if (movementY == 2){
         y = y - 2;
      }
      else if (movementY != 1 || movementX != 2){
         var movementY = prompt("Player 1, make your move.", "<enter 1 or 2>"); 
      }
      document.getElementById("moveY").innerHTML = y;
   }

   else if ((y - x ) > 1) {   
      var movementY = prompt("Player 2, make your move.", "<enter 1>");

      if (movementY == 1) {
         y = y - 1;
      }
      else if (movementY != 1) {
         var movementY = prompt("Player 1, make your move.", "<enter 1>"); 
      }
      document.getElementById("moveY").innerHTML = y;
   }
} 

if ((y%2) != 0) { //the winner ends on an odd-numbered space, while the loser ends on an even-numbered space. If y is even by the end of the game, y loses. If y is odd, y wins
   document.getElementById("resultY").innerHTML = "Player 2 wins!";
}
else if ((y%2) == 0) {
   document.getElementById("resultX").innerHTML = "Player 1 wins!";
}

</script>
</body>
</html> 
