<!DOCTYPE html>
<html>
<body>

<p id="moveX"></p>
<p id="moveY"></p>
<p id="resultY"></p>
<p id="resultX"></p>

<script>
//combined

/* x is location of Player 1
   y is location of Player 2
*/

var x = 1; //x starts at position 1//
var y = 21; // x starts at position 21//

while ((y - x ) > 1) {
    
if ((y - x ) > 1) {
   var movementX = prompt("Player 1, make your move.", "<enter 1, 2, or 3>");

    if (movementX == 1) {
        x = x + 1;
    }
    else if (movementX == 2){
        x = x + 2;
    }
    else if (movementX == 3){
       x = x + 3; 
    }
    else if (movementX != 1 || movementX != 2 || movementX != 3){
  var movementX = prompt("Player 1, make your move.", "<enter 1, 2, or 3>"); 
  }

  document.getElementById("moveX").innerHTML = x;
}
 
if ((y - x ) > 1) {   
    var movementY = prompt("Player 2, make your move.", "<enter 1, 2, or 3>");

    if (movementY == 1) {
        y = y - 1;
    }
    else if (movementY == 2){
        y = y - 2;
    }
    else if (movementY == 3){
       y = y - 3; 
    }
    else if (movementY != 1 || movementX != 2 || movementX != 3){
       var movementY = prompt("Player 1, make your move.", "<enter 1, 2, or 3>"); 
    }

    document.getElementById("moveY").innerHTML = y;
}
}

if ((y%2) != 0) {
    document.getElementById("resultY").innerHTML = "Player 2 wins!";
}
else if ((y%2) == 0) {
    document.getElementById("resultX").innerHTML = "Player 1 wins!";
}

</script>
</body>
</html> 
